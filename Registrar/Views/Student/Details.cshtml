@{
  Layout = "_Layout";
}
@model Registrar.Models.Student

<h2>Student Details</h2>
<h3>@Html.DisplayFor(Model => Model.Name): @Html.DisplayFor(Model => Model.StudentId)</h3>

@if(Model.JoinEntities.Count == 0)
{
  <p>This student is not studenting.</p>
}
else
{
  <h4>Student Courses.</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Course.Name</li>
  }
    </ul>
}
@using(Html.BeginForm())
{
  @Html.Hidden("StudentId", Model.StudentId)
  @Html.Label("Add Course")
  @Html.DropDownList("CourseId")
  <input type="submit" value="Yeet me a course">
}
