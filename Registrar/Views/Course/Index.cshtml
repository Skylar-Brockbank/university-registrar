@{
  Layout = "_Layout";
}
@using Registrar.Models
@using System.Collections.Generic

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h2>No courses have been added</h2>
}
else{
<ul> 
@foreach(Course course in Model)
{
  <li>@Html.ActionLink($"{course.Name}", "Details",  new { id = course.CourseId})</li>
}
</ul>
}
<p>@Html.ActionLink("Add new course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("End it!", "RazeItToTheGround", "Course")</p>